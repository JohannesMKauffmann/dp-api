{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "http://example.com/example.json",
	"title": "Emissies JSON schema",
	"description": "JSON data validation schema to describe fuel station prices",
	"type": "object",
	"required": [ "pompprijzen" ],
	"properties": {
		"emissies": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [ "periode", "euro95", "diesel", "lpg" ],
				"properties": {
					"periode": {
						"type": "integer",
						"minimum": 2010
					},
					"euro95": {
						"type": "number",
						"divisibleBy": 0.001
					},
					"diesel": {
						"type": "number",
						"divisibleBy": 0.001
					},
					"lpg": {
						"type": "number",
						"divisibleBy": 0.001
					}
				}
			}
		}
	}
}