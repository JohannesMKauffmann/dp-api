{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "http://example.com/example.json",
	"title": "Emissies JSON schema",
	"description": "JSON data validation schema to describe emission data",
	"type": "object",
	"required": [ "emissies" ],
	"properties": {
		"emissies": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [
					"bron",
					"periode",
					"nox",
					"co2"
				],
				"properties": {
					"bron": {
						"type": "string",
						"enum": [
							"wegverkeer",
							"benzine",
							"diesel",
							"lpg"
						]
					},
					"periode": {
						"type": "integer",
						"minimum": 2010
					},
					"nox": {
						"type": "number",
						"multipleOf": 0.01
					},
					"co2": {
						"type": "integer"
					}
				}
			}
		}
	}
}