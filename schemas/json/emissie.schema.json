{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Emission JSON schema",
	"description": "JSON data validation schema to describe emission data for a given bron and year. All emission data is in million kilograms.",
	"type": "object",
	"required": [ "bron", "jaar", "nox", "co2" ],
	"properties": {
		"bron": {
			"type": "string",
			"enum": [
				"wegverkeer",
				"benzine",
				"diesel",
				"lpg"
			]
		},
		"jaar": {
			"type": "integer",
			"minimum": 2010
		},
		"nox": {
			"type": "number",
			"divisibleBy": 0.01
		},
		"co2": {
			"type": "integer"
		}
	}
}