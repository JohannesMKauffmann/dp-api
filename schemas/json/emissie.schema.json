{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "http://example.com/example.json",
	"title": "Emissies JSON schema",
	"description": "JSON data validation schema to describe emission data for a given bron and periode",
	"type": "object",
	"required": [ "bron", "periode", "nox", "co2" ],
	"properties": {
		"bron": {
			"type": "string",
			"enum": [
				"wegverkeer",
				"benzine",
				"diesel",
				"lpg"
			]
		},
		"periode": {
			"type": "integer",
			"minimum": 2010
		},
		"nox": {
			"type": "number",
			"divisibleBy": 0.01
		},
		"co2": {
			"type": "integer"
		}
	}
}